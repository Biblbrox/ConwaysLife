#version 330 core

layout (std140) uniform Matrices
{
    mat4 ProjectionMatrix;
    mat4 ViewMatrix;
    mat4 ModelMatrix;
};

layout (location = 0) in vec3 position;

out vec3 VerPos;

void main()
{
    VerPos = position;
    gl_Position = ProjectionMatrix * ViewMatrix * ModelMatrix * vec4(position, 1.0);
}